{
    "name": "storefront-backend",
    "version": "1.0.0",
    "description": "",
    "main": "build/server.js",
    "scripts": {
        "start": "NODE_ENV=development node .",
        "prestart": "npm run build",
        "build": "npx tsc",
        "prebuild": "rm -r ./build",
        "dev": "NODE_ENV=development nodemon src/server.ts",
        "lint": "eslint --fix src/**/*.ts",
        "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "prettier-windows": "prettier --config .prettierrc src/**/*.ts --write",
        "pretest": "npm run migrate-up:test && npm run build",
        "test": "NODE_ENV=test npx jasmine",
        "posttest": "npm run migrate-down:test",
        "migrate-up": "NODE_ENV=development db-migrate up",
        "migrate-down": "NODE_ENV=development db-migrate down",
        "migrate-up:test": "NODE_ENV=test db-migrate up",
        "migrate-down:test": "NODE_ENV=test db-migrate down"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jasmine": "^4.0.3",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^18.0.0",
        "@types/pg": "^8.6.5",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jasmine": "^4.2.1",
        "jasmine-spec-reporter": "^7.0.0",
        "nodemon": "^2.0.18",
        "prettier": "^2.7.1",
        "supertest": "^6.2.3",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.7.3"
    }
}
